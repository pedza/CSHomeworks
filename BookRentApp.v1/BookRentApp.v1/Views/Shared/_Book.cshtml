@model Book

    <div class="card" style="width: 18rem;">
        <img src="~/img/book/@(Model.Title).png" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Gente: @Model.Genre</li>
            <li class="list-group-item">Author: @Model.Author</li>
            <li class="list-group-item">Price: @Model.Price$</li>
        </ul>
        
    </div>
